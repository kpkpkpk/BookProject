<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/constraintLayout_book_item"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <ImageView
        android:id="@+id/vertical_book_item_image"
        android:layout_width="70dp"
        android:layout_height="110dp"
        android:scaleType="centerCrop"
        android:src="@mipmap/ic_launcher"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/vertical_book_item_bookname"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="5dp"
        android:text="Test"
        android:textSize="14sp"
        android:textStyle="bold"
        app:layout_constraintStart_toEndOf="@id/vertical_book_item_image"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/vertical_book_item_author"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="5dp"
        android:layout_marginTop="5dp"
        android:layout_marginEnd="5dp"
        android:layout_marginBottom="5dp"
        android:maxLines="1"
        android:maxLength="50"
        android:ellipsize="end"
        android:text="tetstststststststststststststststsa"
        app:layout_constraintStart_toEndOf="@id/vertical_book_item_image"
        app:layout_constraintTop_toBottomOf="@id/vertical_book_item_bookname" />
</androidx.constraintlayout.widget.ConstraintLayout>